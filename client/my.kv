#:import MeshLinePlot kivy.garden.graph.MeshLinePlot

<MyGridLayout>:
    loglabel: loglabel
    graphlayout: graphlayout

    FloatLayout:
        size: root.width, root.height

        ScrollView:
            pos_hint: {"top":1}
            size_hint: (1, 0.7)
            size: self.size
            do_scroll_y: True

            GridLayout:
                id: graphlayout
                size_hint_y: None
                row_default_height: self.height*0.5
                row_force_default: True
                height: root.gridheight
                cols:2
                MyAddButton:

        ScrollView:
            do_scroll_x: True
            do_scroll_y: True
            size_hint: (0.5, 0.3)
        
            Label:
                id: loglabel
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                padding: 10, 10
                text:""
                markup: True
        
        GridLayout:
            cols:6
            pos_hint: {"x": 0.5}
            size_hint: (0.5, 0.3)

            Button:
                text: "clear console log"
                on_press: root.log_clear()

            Button:
                text: "start recording"
                on_press: root.start()

            Button:
                text: "get values"
                on_press: root.getValues()
            
            Button:
                text: "print values"
                on_press: root.printValues()

            Button:
                text: "connect to AP"
                on_press: root.connectToWifi()

<MyAddButton@Widget>:
    GridLayout:
        size: self.parent.size
        pos: self.parent.pos
        cols:2
        size_hint: (1, 0.7)
        
        Label:
            text: "add graph"
        Button:
            text: "UwU"
            on_press: root.addGraph()
    
<MyGraph@Widget>:
    GridLayout:
        size: self.parent.size
        pos: self.parent.pos
        cols:1
        size_hint: (1, 0.7)
        Graph:
            size: self.size
            pos: self.pos
            plot: MeshLinePlot
            xlabel:'X'
            ylabel:'Y'
            x_ticks_minor:5
            x_tics_major:25
            y_ticks_major:1
            y_grid_label:True
            x_grid_label:True
            padding:5
            x_grid:True
            y_grid:True
            xmin:-0
            xmax:100
            ymin:-1
            ymax:1