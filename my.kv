#:import MeshLinePlot kivy.garden.graph.MeshLinePlot

<MyGridLayout>:
    loglabel: loglabel
    graphlayout: graphlayout
    FloatLayout:
        size: root.width, root.height

        GridLayout:
            id: graphlayout
            cols:2
            pos_hint: {"top":1}
            size_hint: (1, 0.7)

        ScrollView:
            do_scroll_x: True
            do_scroll_y: True
            size_hint: (0.5, 0.3)
        
            Label:
                id: loglabel
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                padding: 10, 10
                text:""
                markup: True
        
        GridLayout:
            cols:6
            pos_hint: {"x": 0.5}
            size_hint: (0.5, 0.3)

            Button:
                text: "start recording"
                on_press: root.start()

            Button:
                text: "get values"
                on_press: root.getValues()
            
            Button:
                text: "print values"
                on_press: root.printValues()

            Button:
                text: "connect to AP"
                on_press: root.connectToWifi()

<MyAddButton>:
    GridLayout:
        cols:2
        size_hint: (1, 0.7)
        Label:
            text: "ara ara"
        Button:
            text: "UwU"
            on_press: root.addGraph()
    
<MyGraph>:
    Graph:
        id:graph
        plot: MeshLinePlot
        xlabel:'X'
        ylabel:'Y'
        x_ticks_minor:5
        x_tics_major:25
        y_ticks_major:1
        y_grid_label:True
        x_grid_label:True
        padding:5
        x_grid:True
        y_grid:True
        xmin:-0
        xmax:100
        ymin:-1
        ymax:1
        pos: 0, root.height / 6
        size: root.width * 2 / 3 , root.height * 18 / 24